{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Tourism consumption in purchasers' prices over time",
  "data": { 
    "url": "Tourism consumption in purchasers' prices over time.csv"
  },
  "width": "container",
  "autosize": {
    "type": "fit"
  },
  "config": {
    "font": "Poppins",
    "axis": { "labelFont": "Poppins", "titleFont": "Poppins", "labelFontSize": 12, "titleFontSize": 13 },
    "legend": { "labelFont": "Poppins", "titleFont": "Poppins" },
    "title": { "font": "Poppins" }
  },
  "transform": [
    {
      "fold": ["Domestic consumption ($b)", "International consumption ($b)"],
      "as": ["Category", "Value"]
    }
  ],
  "params": [
    {
      "name": "series_filter",
      "select": { "type": "point", "fields": ["Category"] },
      "bind": "legend"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "area",
        "interpolate": "monotone",
        "opacity": 0.8
      },
      "encoding": {
        "x": {
          "field": "Financial year",
          "type": "ordinal",
          "title": "Financial Year",
          "axis": {
            "labelAngle": 0,
            "labelFontSize": 12,
            "titleFontSize": 13
          }
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title": "Consumption ($ billion)"
        },
        "color": {
          "field": "Category",
          "type": "nominal",
          "scale": {
            "domain": ["Domestic consumption ($b)", "International consumption ($b)"],
            "range": ["#493699", "#f4a261"]
          },
          "title": ""
        },
        "opacity": {
          "condition": { "param": "series_filter", "value": 1 },
          "value": 0.2
        },
        "tooltip": [
          { "field": "Financial year", "title": "Financial Year" },
          { "field": "Category", "title": "Type" },
          { "field": "Value", "title": "Tourism Consumption ($b)", "format": ".2f" }
        ]
      }
    },
    {
      "data": {
        "values": [
          { "Year": 2020, "Value": 15, "label": "Tourism dip during COVID" }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 10,
        "dy": -10,
        "fontSize": 12,
        "color": "#e76f51"
      },
      "encoding": {
        "x": { "field": "Year", "type": "quantitative" },
        "y": { "field": "Value", "type": "quantitative" },
        "text": { "field": "label" }
      }
    }
  ]
}
