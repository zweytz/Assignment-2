{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Tourism consumption in purchasers' prices over time",
  "data": { 
    "url": "Tourism consumption in purchasers' prices over time.csv"
  },
  "width": "container",
    "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "transform": [
    {
      "fold": ["Domestic consumption ($b)", "International consumption ($b)"],
      "as": ["Category", "Value"]
    }
  ],
  "mark": {
    "type": "area",
    "interpolate": "monotone",
    "opacity": 0.8
  },
  "encoding": {
    "x": {
      "field": "Financial year",
      "type": "ordinal",
      "title": "Financial Year",
      "axis": { "labelAngle": 0 }
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Tourism Consumption ($ billion)"
    },
    "color": {
      "field": "Category",
      "type": "nominal",
      "scale": {
        "domain": ["Domestic consumption ($b)", "International consumption ($b)"],
        "range": ["#493699", "#f4a261"]
      },
      "title": ""
    },
    "tooltip": [
      { "field": "Financial year", "title": "Financial Year" },
      { "field": "Category", "title": "Type" },
      { "field": "Value", "title": "Tourism Consumption ($b)", "format": ".2f" }
    ]
  }
}
