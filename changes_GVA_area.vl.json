{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Tourism consumption in purchasers' prices over time with legend filtering and COVID annotation",
  "data": { "url": "Tourism consumption in purchasers' prices over time.csv" },
  "width": "container",
  "autosize": { "type": "fit" },
  "config": {
    "font": "Poppins",
    "axis": { "labelFont": "Poppins", "titleFont": "Poppins", "labelFontSize": 12, "titleFontSize": 13 },
    "legend": { "labelFont": "Poppins", "titleFont": "Poppins" },
    "title": { "font": "Poppins" }
  },

  "resolve": { "scale": { "y": "independent" } },

  "layer": [
    {
      "params": [
        {
          "name": "series_filter",
          "select": { "type": "point", "fields": ["Category"] },
          "bind": "legend"
        }
      ],
      "transform": [
        {
          "fold": ["Domestic consumption ($b)"],
          "as": ["Category", "Value"]
        }
      ],
      "mark": {
        "type": "area",
        "interpolate": "monotone",
        "opacity": 0.8,
        "color": "#493699"
      },
      "encoding": {
        "x": {
          "field": "Financial year",
          "type": "ordinal",
          "title": "Financial Year",
          "axis": { "labelAngle": 0, "labelFontSize": 12, "titleFontSize": 13 }
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title": "Consumption ($ billion)"
        },
        "color": {
          "field": "Category",
          "type": "nominal",
          "scale": {
            "domain": ["Domestic consumption ($b)", "International consumption ($b)"],
            "range": ["#493699", "#f4a261"]
          },
          "legend": { "title": "" }
        },
        "opacity": {
          "condition": { "param": "series_filter", "value": 1 },
          "value": 0.1
        },
        "tooltip": [
          { "field": "Financial year", "title": "Financial Year" },
          { "field": "Category", "title": "Type" },
          { "field": "Value", "title": "Tourism Consumption ($b)", "format": ".2f" }
        ]
      }
    },
    {
      "transform": [
        {
          "fold": ["International consumption ($b)"],
          "as": ["Category", "Value"]
        }
      ],
      "mark": {
        "type": "area",
        "interpolate": "monotone",
        "opacity": 0.8,
        "color": "#f4a261"
      },
      "encoding": {
        "x": { "field": "Financial year", "type": "ordinal" },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title": "Consumption ($ billion)"
        },
        "opacity": {
          "condition": { "param": "series_filter", "value": 1 },
          "value": 0.1
        },
        "tooltip": [
          { "field": "Financial year", "title": "Financial Year" },
          { "field": "Category", "title": "Type" },
          { "field": "Value", "title": "Tourism Consumption ($b)", "format": ".2f" }
        ]
      }
    },
    {
      "data": { "values": [{ "Financial year": "2019-20", "yStart": 0, "yEnd": 80 }] },
      "mark": { "type": "rule", "color": "red", "strokeDash": [4, 4] },
      "encoding": {
        "x": { "field": "Financial year", "type": "ordinal" },
        "y": { "field": "yStart", "type": "quantitative", "axis": null },
        "y2": { "field": "yEnd" }
      }
    },
    {
      "data": { "values": [{ "Financial year": "2019-20", "Value": 15, "label": "Tourism dip during COVID" }] },
      "mark": { "type": "text", "color": "#e63946", "dy": -10, "dx": 10, "fontSize": 12 },
      "encoding": {
        "x": { "field": "Financial year", "type": "ordinal" },
        "y": { "field": "Value", "type": "quantitative" },
        "text": { "field": "label" }
      }
    }
  ]
}
