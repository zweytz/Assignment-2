{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Change in GVA by tourism industry (2023 to 2024), current prices",
  "data": { 
    "url": "Change in gross value added by tourism industry, 2022-23 to 2023-24, current prices.csv"
  },
  "width": "container",
    "autosize": {
    "type": "fit",
    "contains": "padding"
  },
      "config": {
    "font": "Poppins",
    "axis": { "labelFont": "Poppins", "titleFont": "Poppins", "labelFontSize": 12, "titleFontSize": 13 },
    "legend": { "labelFont": "Poppins", "titleFont": "Poppins" },
    "title": { "font": "Poppins" }
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "cornerRadiusEnd": 3
      },
      "params": [
        {
          "name": "industry_select",
          "select": { "type": "point", "fields": ["Tourism industry"] }
        }
      ],
      "encoding": {
        "y": {
          "field": "Tourism industry",
          "type": "nominal",
          "sort": "-x",
          "title": "Tourism Industry",
          "axis": { "labelLimit": 300, "labelFontSize": 12, "titleFontSize": 13}
        },
        "x": {
          "field": "GVA ($b)",
          "type": "quantitative",
          "title": "Change in GVA ($ billions)",
          "axis": { "grid": true, "labelFontSize": 12, "titleFontSize": 13 }
        },
        "color": {
          "condition": {
            "test": "datum['GVA ($b)'] < 0",
            "value": "#f4a261"
          },
          "value": "#493699"
        },
        "opacity": {
          "condition": { "param": "industry_select", "value": 1 },
          "value": 0.3
        },
        "tooltip": [
          { "field": "Tourism industry", "title": "Industry" },
          { "field": "GVA ($b)", "title": "GVA Change ($ billion)", "format": ".3f" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "fontSize": 8,
        "fontWeight": "bold",
        "color": "#333"
      },
      "encoding": {
        "y": { "field": "Tourism industry", "type": "nominal", "sort": "x" },
        "x": { "field": "GVA ($b)", "type": "quantitative" },
        "text": {
          "field": "GVA ($b)",
          "type": "quantitative",
          "format": ".3f"
        }
      }
    }
  ]
}
