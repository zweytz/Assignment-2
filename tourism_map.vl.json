{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "projection": { "type": "mercator" },
  "title": {
    "text": "Overnight Tourism Trips in Australia (2024)",
    "fontSize": 20,
    "anchor": "middle"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rowanhogan/australian-states/master/states.geojson",
        "format": { "type": "json", "property": "features" }
      },
      "mark": { "type": "geoshape", "stroke": "white", "fill": "#defdff" }
    },
    {
      "data": { "url": "tourismtripsin2024.csv" },
      "transform": [
        {
          "calculate": "format(datum.Trips / 1000000, '.1f') + ' million trips'",
          "as": "tooltipTrip"
        },
        {
          "calculate": "'$' + format(datum.spend / 1000000000, '.1f') + ' billion spend'",
          "as": "tooltipSpend"
        }
      ],
      "mark": { "type": "circle", "opacity": 0.7, "stroke": "white", "strokeWidth": 1 },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "size": {
          "field": "Trips",
          "type": "quantitative",
          "title": "Overnight Trips",
          "scale": { "type": "sqrt", "range": [100, 3000] },
          "legend": null
        },
        "color": { "value": "#493699" },
        "tooltip": [
          { "field": "State Name", "title": "State" },
          { "field": "tooltipTrip", "title": "Overnight Trips" },
          { "field": "tooltipSpend", "title": "Tourism Spend" }
        ]
      }
    },
    {
      "data": { "url": "tourismtripsin2024.csv" },
      "transform": [
        {
          "calculate": "format(datum.Trips / 1000000, '.1f') + ' million trips'",
          "as": "label"
        }
      ],
      "mark": {
        "type": "text",
        "dy": 35,
        "fontSize": 12,
        "color": "#493699",
        "fontWeight": "bold"
      },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "text": { "field": "label", "type": "nominal" }
      }
    }
  ]
}
