{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "projection": {"type": "mercator"},
  "title": {
    "text": "Overnight Tourism Trips in Australia (2024)",
    "fontSize": 20,
    "anchor": "middle"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/rowanhogan/australian-states/master/states.geojson",
    "format": {"type": "json", "property": "features"}
  },
  "transform": [
    {
      "lookup": "properties.STATE_NAME",
      "from": {
        "data": {"url": "tourismtripsin2024.csv"},
        "key": "State Name",
        "fields": ["Trips"]
      },
      "default": 0
    }
  ],
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "color": {
      "field": "properties.STATE_NAME", "title": "State",
      "type": "nominal",
      "scale": {"scheme": "category20"}
    },
    "tooltip": [
      {"field": "properties.STATE_NAME", "title": "State"},
      {"field": "Trips", "title": "Overnight Trips"}
    ]
  }
}
